<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darker_actionbar_black"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:orientation="vertical">

        <TextView
            android:textAlignment="center"
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:text="do you want to join?"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tv_title"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:text="GO TO WILD SUBANG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_description"
            android:textAlignment="center"
            android:padding="20dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:text="ayo kita jalan2 k subang yang indah dan megah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_destination"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:text="destination to subang"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_date_touring"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:text="start : 30 may 2016"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <mehdi.sakout.fancybuttons.FancyButton xmlns:fancy="http://schemas.android.com/apk/res-auto"
            android:id="@+id/btn_join"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textAllCaps="true"
            fancy:fb_defaultColor="@color/redeem_booking_ok"
            fancy:fb_focusColor="@color/light_pink"
            fancy:fb_text="JOIN"
            fancy:fb_textGravity="center"
            fancy:fb_textFont="ProximaNovaSemibold.otf"
            fancy:fb_iconFont="ProximaNovaSemibold.otf"
            fancy:fb_textColor="@color/white"
            fancy:fb_textSize="18sp" />
        <mehdi.sakout.fancybuttons.FancyButton xmlns:fancy="http://schemas.android.com/apk/res-auto"
            android:id="@+id/btn_decline"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textAllCaps="true"
            fancy:fb_defaultColor="@color/redeem_booking_ok"
            fancy:fb_focusColor="@color/light_pink"
            fancy:fb_text="DECLINE"
            fancy:fb_textGravity="center"
            fancy:fb_textFont="ProximaNovaSemibold.otf"
            fancy:fb_iconFont="ProximaNovaSemibold.otf"
            fancy:fb_textColor="@color/white"
            fancy:fb_textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageView
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/content_description"
            android:scaleType="centerCrop"
            android:src="@drawable/sliders_close_icon" />

    </LinearLayout>

</LinearLayout>