<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/blue"
    android:layout_height="match_parent">
    <LinearLayout
        android:padding="10dp"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_horizontal"
            android:textColor="@color/redeem_booking_ok"
            android:text="Detail"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_username"
            android:hint="username"
            android:inputType="textEmailAddress"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.design.widget.TextInputEditText
            android:layout_margin="10dp"
            android:id="@+id/et_password"
            android:hint="password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.design.widget.TextInputEditText
            android:layout_margin="10dp"
            android:id="@+id/et_name"
            android:hint="full name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.design.widget.TextInputEditText
            android:layout_margin="10dp"
            android:id="@+id/et_birthdate"
            android:hint="birthdate"
            android:editable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.giffar.ctour.customview.CircleImageView
            android:id="@+id/iv_photo"
            android:layout_margin="10dp"
            android:layout_width="70dp"
            android:layout_gravity="center"
            android:src="@drawable/sliders_avatar_sample_empty"
            android:layout_height="70dp" />
        <mehdi.sakout.fancybuttons.FancyButton xmlns:fancy="http://schemas.android.com/apk/res-auto"
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            fancy:fb_defaultColor="@color/redeem_booking_ok"
            fancy:fb_focusColor="@color/dark_pink"
            fancy:fb_text="SAVE"
            fancy:fb_textColor="@android:color/white"
            fancy:fb_textFont="ProximaNovaSemibold.otf"
            fancy:fb_textSize="22sp"/>
    </LinearLayout>

</RelativeLayout>