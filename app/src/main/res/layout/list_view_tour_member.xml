<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:id="@+id/background"
    android:layout_width="fill_parent" android:padding="10dp" android:layout_height="70dp">
    <com.giffar.ctour.customview.CircleImageView
        android:id="@+id/iv_member"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/logo_ctour"/>
    <TextView
        android:id="@+id/tv_member_name"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/iv_member"
        android:layout_centerVertical="true"
        android:text="giffar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_distance"
        android:textColor="@color/grey"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="20 meter behind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>