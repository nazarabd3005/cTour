<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/blue"
    android:layout_height="match_parent">
    <LinearLayout
        android:padding="10dp"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_horizontal"
            android:textColor="@color/redeem_booking_ok"
            android:text="Create Club"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_club_name"
            android:hint="club name"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.design.widget.TextInputEditText
            android:layout_margin="10dp"
            android:id="@+id/et_since"
            android:hint="made since"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.design.widget.TextInputEditText
            android:layout_margin="10dp"
            android:id="@+id/et_type"
            android:hint="type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.design.widget.TextInputEditText
            android:layout_margin="10dp"
            android:id="@+id/et_description"
            android:hint="description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.giffar.ctour.customview.CircleImageView
                    android:id="@+id/iv_photo_club"
                    android:layout_margin="10dp"
                    android:layout_width="70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/sliders_avatar_sample_empty"
                    android:layout_height="70dp" />
                <TextView
                    android:layout_gravity="center"
                    android:text="club_logo"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.giffar.ctour.customview.CircleImageView
                    android:id="@+id/iv_licence"
                    android:layout_margin="10dp"
                    android:layout_width="70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/sliders_avatar_sample_empty"
                    android:layout_height="70dp" />
                <TextView
                    android:layout_gravity="center"
                    android:text="club licence"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:text="Note: for club licence is your club licence convert to image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <mehdi.sakout.fancybuttons.FancyButton xmlns:fancy="http://schemas.android.com/apk/res-auto"
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            fancy:fb_defaultColor="@color/redeem_booking_ok"
            fancy:fb_focusColor="@color/dark_pink"
            fancy:fb_text="CREATE"
            fancy:fb_textColor="@android:color/white"
            fancy:fb_textFont="ProximaNovaSemibold.otf"
            fancy:fb_textSize="22sp"/>
    </LinearLayout>

</RelativeLayout>