<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181717"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_container"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="@string/notification"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_container"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ListView
                android:id="@+id/lv_right_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:choiceMode="singleChoice"
                android:divider="@android:color/transparent"
                android:dividerHeight="1dp"
                android:listSelector="@drawable/selectable_background_zouk" />

            <TextView
                android:id="@+id/tv_no_notif"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="No new notifications"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:background="#181717"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/btn_clear_notification"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selectable_background_zouk"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/clear_notification"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/pink" />
    </LinearLayout>

</RelativeLayout>